@using LanguagePracticeSite.Models;

@model IEnumerable<PresentPerfect>

<a class="btn btn-primary" asp-controller="Management" asp-action="CreatePresentPerfect">Add New Present Perfect Phrase</a>
<table>
    <tr>
        <th>Verb Id</th>
        <th>Verb Infinitive</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (PresentPerfect word in Model)
    {
        <tr>
            <td>@word.Id</td>
            <td>@word.Infinitive</td>
            <td>
                <a asp-route="PresIndEdit" asp-route-id="@word.Id">
                    <i class="bi bi-pencil-square"></i>
                </a>
            </td>
            <td>
                <a asp-route="PresIndDelete" asp-route-id="@word.Id">
                    <i class="bi bi-trash3-fill"></i>
                </a>
            </td>
        </tr>
    }
</table>
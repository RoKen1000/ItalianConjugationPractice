@using LanguagePracticeSite.Models;

@model IEnumerable<PresentIndicative>

<a class="btn btn-primary" asp-controller="Management" asp-action="CreatePresentIndicative">Add New Verb</a>
<table>
    <tr>
        <th>Verb Id</th>
        <th>Verb Infinitive</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
        @foreach(PresentIndicative word in Model)
        {
            <tr>
                <td>@word.Id</td>
                <td>@word.Infinitive</td>
                <td>
                    <a asp-controller="Management" asp-action="EditPresentIndicative" asp-route-id="@word.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
                <td>
                    <i class="bi bi-trash3-fill"></i>
                </td>
            </tr>
        }
</table>
